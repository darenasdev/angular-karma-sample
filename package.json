{
  "version": "0.0.1",
  "private": true,
  "name": "angular-karma-sample",
  "description": "Sample AngularJs App with unit test using karma",
  "repository": "https://github.com/ravthiru/angular-karma-sample",
  "devDependencies": {
    "karma": "^0.12.16",
    "karma-chrome-launcher": "^0.1.4",
    "karma-jasmine": "~0.1.0",
    "http-server": "^0.6.1",
    "bower": "^1.3.1"
  },
  "scripts": {
    "postinstall": "bower install",

    "prestart": "npm install",
    "start": "http-server -a 0.0.0.0 -p 8000",

    "pretest": "npm install",
    "test": "node node_modules/karma/bin/karma start test/karma.conf.js"
	}
}
